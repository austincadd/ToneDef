{% comment %}
  Value Props Section - Why Choose Us
{% endcomment %}

<div class="value-props-section">
  <div class="page-width">
    <div class="value-props-heading">
      <h2>{{ section.settings.heading | default: "Why Choose Def Audio" }}</h2>
      <p>{{ section.settings.subheading | default: "We're committed to delivering the highest quality tools for modern music production" }}</p>
    </div>
    
    <div class="value-props-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'value_prop' %}
            <div class="value-prop-card" data-aos="fade-up" data-aos-delay="{{ forloop.index0 | times: 100 }}">
              <div class="value-prop-icon">
                {{ block.settings.icon }}
              </div>
              <h3 class="value-prop-title">{{ block.settings.title }}</h3>
              <p class="value-prop-description">{{ block.settings.description }}</p>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

