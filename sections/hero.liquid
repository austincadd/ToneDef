{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero-section">
  <div class="hero-background parallax">
    {% if section.settings.background_image %}
      <img src="{{ section.settings.background_image | image_url: width: 1920 }}" 
           alt="{{ section.settings.background_image.alt | escape }}"
           class="hero-bg-image">
    {% endif %}
    <div class="hero-overlay"></div>
  </div>
  
  <div class="page-width">
    <div class="hero-content">
      <div class="hero-text" style="background: rgba(0,0,0,0.8); padding: 1rem; border-radius: 6px; text-align: center; border: 1px solid #66ffcc; position: relative; z-index: 10; width: 100%; max-width: 1200px; margin: 0 auto;">
        <h1 style="color: #66ffcc !important; font-size: 1.8rem !important; margin-bottom: 0.5rem !important; font-weight: 700 !important; line-height: 1.2 !important; text-shadow: 0 0 15px rgba(102, 255, 204, 0.8) !important; display: block !important; visibility: visible !important; width: 100%; text-align: center !important;">
          Your Studio, Upgradedâ€”Pro Sounds at Your Fingertips.
        </h1>
        
        <p style="color: #ffffff !important; font-size: 1rem !important; margin-bottom: 0 !important; line-height: 1.3 !important; text-shadow: 0 0 10px rgba(255, 255, 255, 0.8) !important; display: block !important; visibility: visible !important; width: 100%; text-align: center !important;">
          Explore premium sample packs and VST presets built for modern producers.
        </p>
      </div>
      
      {% if section.settings.featured_image %}
        <div class="hero-image reveal">
          <img src="{{ section.settings.featured_image | image_url: width: 600 }}" 
               alt="{{ section.settings.featured_image.alt | escape }}"
               class="hero-featured-image">
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Professional Music Production Tools"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Elevate your sound with premium sample packs, cutting-edge plugins, and exclusive producer resources."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary CTA Text",
      "default": "Explore Products"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Primary CTA URL"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary CTA URL"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
