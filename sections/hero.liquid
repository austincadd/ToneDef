{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero-section section" id="hero">
  <div class="hero-background parallax">
    {% if section.settings.background_image %}
      <img src="{{ section.settings.background_image | image_url: width: 1920 }}" 
           alt="{{ section.settings.background_image.alt | escape }}"
           class="hero-bg-image">
    {% endif %}
    <div class="hero-overlay"></div>
  </div>
  
  <div class="page-width">
    <div class="hero-content">
      <div class="hero-content-wrapper" style="display: flex; align-items: center; justify-content: space-between; width: 100%; max-width: 1200px; margin: 0 auto; gap: 6rem;">
        <!-- Featured Product Image -->
        <div class="hero-product-image" style="flex: 1; position: relative;">
          <div class="product-image-container" style="background: rgba(255, 255, 255, 0.05); padding: 3rem; border-radius: 12px; border: 1px solid rgba(255, 255, 255, 0.1);">
            <div class="product-placeholder" style="width: 100%; height: 350px; background: #1a1a1a; border-radius: 8px; display: flex; align-items: center; justify-content: center; position: relative; overflow: hidden;">
              <div class="product-icon" style="font-size: 3rem; color: #66ffcc;">ðŸŽµ</div>
            </div>
            <div class="sale-badge" style="position: absolute; top: 1.5rem; right: 1.5rem; background: #ff4444; color: white; padding: 0.4rem 0.8rem; border-radius: 4px; font-weight: 600; font-size: 0.8rem;">
              50% OFF
            </div>
          </div>
        </div>
        
        <!-- Hero Text Content -->
        <div class="hero-text" style="flex: 1; text-align: left;">
          <div class="product-badge" style="color: #66ffcc; padding: 0.3rem 0; margin-bottom: 1rem; font-size: 0.9rem; font-weight: 500; text-transform: uppercase; letter-spacing: 1px;">
            Featured Pack
          </div>
          
          <h1 style="color: #ffffff !important; font-size: 2.5rem !important; margin-bottom: 1rem !important; font-weight: 600 !important; line-height: 1.2 !important; display: block !important; visibility: visible !important; width: 100%; text-align: left !important; font-family: 'Space Grotesk', sans-serif;">
            Warehouse Vocals
          </h1>
          
          <p style="color: rgba(255, 255, 255, 0.7) !important; font-size: 1.1rem !important; margin-bottom: 2rem !important; line-height: 1.6 !important; display: block !important; visibility: visible !important; width: 100%; text-align: left !important;">
            Professional quality vocal samples for your next track. Clean, punchy, and ready to use.
          </p>
          
          <div class="price-section" style="margin-bottom: 2rem;">
            <div class="price-container" style="display: flex; align-items: center; gap: 1rem;">
              <span class="current-price" style="color: #66ffcc !important; font-size: 2rem !important; font-weight: 700 !important;">$29.99</span>
              <span class="original-price" style="color: rgba(255, 255, 255, 0.4) !important; font-size: 1.2rem !important; text-decoration: line-through !important;">$59.99</span>
            </div>
          </div>
          
          <div class="cta-buttons" style="display: flex; gap: 1rem;">
            <button class="add-to-cart-btn" style="background: #66ffcc; color: #1a1a1a; padding: 1rem 2rem; border: none; border-radius: 6px; font-size: 1rem; font-weight: 600; cursor: pointer; transition: all 0.2s ease;">
              Add to Cart
            </button>
            <button class="preview-btn" style="background: transparent; color: #66ffcc; padding: 1rem 2rem; border: 1px solid #66ffcc; border-radius: 6px; font-size: 1rem; font-weight: 500; cursor: pointer; transition: all 0.2s ease;">
              Preview
            </button>
          </div>
        </div>
      </div>
      
      {% if section.settings.featured_image %}
        <div class="hero-image reveal">
          <img src="{{ section.settings.featured_image | image_url: width: 600 }}" 
               alt="{{ section.settings.featured_image.alt | escape }}"
               class="hero-featured-image">
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Professional Music Production Tools"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Elevate your sound with premium sample packs, cutting-edge plugins, and exclusive producer resources."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary CTA Text",
      "default": "Explore Products"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Primary CTA URL"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary CTA URL"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
