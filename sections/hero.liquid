{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero-section section" id="hero">
  <div class="hero-background">
    <div class="hero-gradient"></div>
  </div>
  
  <div class="page-width">
    <div class="hero-content">
      <!-- Clean Typography Focus -->
      <div class="hero-text">
        <div class="product-badge">Featured Pack</div>
        
        <h1 class="hero-title">
          <span class="title-line-1">Liquify</span>
          <span class="title-line-2">Vocals</span>
        </h1>
        
        <p class="hero-description">
          Professional quality vocal samples for your next track. 
          Clean, punchy, and ready to use.
        </p>
        
        <div class="price-section">
          <span class="current-price">$29.99</span>
          <span class="original-price">$59.99</span>
        </div>
        
        <div class="cta-section">
          <button class="primary-cta">Add to Cart</button>
          <button class="secondary-cta">Preview</button>
        </div>
      </div>
      
      <!-- Subtle Product Preview -->
      <div class="product-preview">
        <div class="preview-container">
          <img 
            src="https://cdn.shopify.com/s/files/1/0938/0285/6811/files/Screenshot_2025-09-16_at_9.09.20_PM.png?v=1758071391"
            alt="Warehouse Vocals" 
            class="preview-image"
            loading="lazy"
            width="240"
            height="240"
          >
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Professional Music Production Tools"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Elevate your sound with premium sample packs, cutting-edge plugins, and exclusive producer resources."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary CTA Text",
      "default": "Explore Products"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Primary CTA URL"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary CTA URL"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
