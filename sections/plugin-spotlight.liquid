{% comment %}
  Plugin Spotlight Section - Flagship Plugin
{% endcomment %}

<div class="plugin-spotlight-section section" id="plugins">
  <div class="page-width">
    <div class="plugin-spotlight-content" style="display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center; padding: 0;">
      <div class="plugin-visual">
        <div class="plugin-mockup tech-panel" style="padding: 2rem; border-radius: 12px; position: relative; overflow: hidden;">
          <div class="plugin-ui" style="background: var(--cyber-bg); border-radius: 8px; padding: 1.5rem; border: 1px solid var(--panel-border);">
            <div class="plugin-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid var(--panel-border);">
              <div class="plugin-title" style="color: var(--text-primary); font-size: 1.2rem; font-weight: 600; font-family: 'Space Grotesk', sans-serif;">{{ section.settings.plugin_name | default: "Def Audio Pro" }}</div>
              <div class="plugin-status" style="color: var(--neon-green); font-size: 0.8rem;">●</div>
            </div>
            <div class="plugin-controls" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 1rem; margin-bottom: 1.5rem;">
              <div class="control-knob" style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, var(--accent-blue), var(--neon-green)); border: 2px solid var(--panel-border); position: relative; margin: 0 auto;"></div>
              <div class="control-knob" style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, var(--neon-green), var(--accent-blue)); border: 2px solid var(--panel-border); position: relative; margin: 0 auto;"></div>
              <div class="control-knob" style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, var(--accent-blue), var(--neon-green)); border: 2px solid var(--panel-border); position: relative; margin: 0 auto;"></div>
              <div class="control-knob" style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, var(--neon-green), var(--accent-blue)); border: 2px solid var(--panel-border); position: relative; margin: 0 auto;"></div>
            </div>
            <div class="plugin-waveform" style="display: flex; justify-content: center; align-items: end; gap: 0.3rem; height: 60px;">
              <div class="wave-line" style="width: 6px; background: linear-gradient(to top, var(--accent-blue), var(--neon-green)); border-radius: 3px; animation: wavePulse 2s ease-in-out infinite;"></div>
              <div class="wave-line" style="width: 6px; background: linear-gradient(to top, var(--neon-green), var(--accent-blue)); border-radius: 3px; animation: wavePulse 2s ease-in-out infinite 0.3s;"></div>
              <div class="wave-line" style="width: 6px; background: linear-gradient(to top, var(--accent-blue), var(--neon-green)); border-radius: 3px; animation: wavePulse 2s ease-in-out infinite 0.6s;"></div>
              <div class="wave-line" style="width: 6px; background: linear-gradient(to top, var(--neon-green), var(--accent-blue)); border-radius: 3px; animation: wavePulse 2s ease-in-out infinite 0.9s;"></div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="plugin-info">
        <h2 class="plugin-heading" style="color: var(--text-primary); font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem; line-height: 1.2; font-family: 'Space Grotesk', sans-serif;">
          {{ section.settings.heading | default: "Meet Our Flagship Plugin" }}
        </h2>
        <p class="plugin-tagline" style="color: var(--text-secondary); font-size: 1.1rem; line-height: 1.6; margin-bottom: 2rem;">
          {{ section.settings.tagline | default: "The ultimate tool for professional music production" }}
        </p>
        
        <div class="plugin-features" style="margin-bottom: 2rem;">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'feature' %}
                <div class="feature-item" style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem; padding: 0.8rem; background: var(--cyber-panel); border-radius: 8px; border: 1px solid var(--panel-border);">
                  <div class="feature-icon" style="color: var(--neon-green); font-size: 1.2rem; font-weight: bold;">✓</div>
                  <span class="feature-text" style="color: var(--text-secondary); font-size: 0.95rem; font-family: 'Space Grotesk', sans-serif;">{{ block.settings.feature }}</span>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
        
        <div class="plugin-actions">
          <a href="{{ section.settings.try_url | default: '/collections/plugins' }}" class="try-btn" style="background: var(--accent-blue); color: var(--cyber-bg); padding: 1rem 2rem; border: none; border-radius: 8px; font-size: 1rem; font-weight: 600; cursor: pointer; transition: all 0.3s ease; text-decoration: none; display: inline-block; font-family: 'Space Grotesk', sans-serif;">
            Try Now
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
@keyframes wavePulse {
  0%, 100% { height: 20px; }
  50% { height: 50px; }
}
</style>


{% schema %}
{
  "name": "Plugin Spotlight",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Meet Our Flagship Plugin"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "The ultimate tool for professional music production"
    },
    {
      "type": "text",
      "id": "plugin_name",
      "label": "Plugin Name",
      "default": "Def Audio Pro"
    },
    {
      "type": "text",
      "id": "try_url",
      "label": "Try Now URL",
      "default": "/collections/plugins"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "label": "Feature",
          "default": "Professional-grade audio processing"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Plugin Spotlight",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "feature": "Professional-grade audio processing"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature": "Real-time waveform visualization"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature": "One-click preset management"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature": "Compatible with all major DAWs"
          }
        }
      ]
    }
  ]
}
{% endschema %}
